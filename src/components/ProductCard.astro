---
const { product } = Astro.props;

const discountedPrice = product.discount
  ? Math.round(product.price - (product.price * product.discount) / 100)
  : null;
---

<article
  class={`product ${product.discount ? "onSale" : ""} ${product.soldout ? "soldOut" : ""}`}
>
  <a href={`/product/${product.id}`}>
    <img
      class="image"
      src={`https://kea-alt-del.dk/t7/images/webp/640/${product.id}.webp`}
      alt={product.productdisplayname}
    />
  </a>
  <p>{product.productdisplayname}</p>
  <p class="tag">{product.category} | {product.brandname}</p>
  <p class="price">
    {
      product.discount ? (
        <>
          <span class="old-price">DKK {product.price},-</span>
          <span class="new-price">DKK {discountedPrice},-</span>
        </>
      ) : (
        <>DKK {product.price},-</>
      )
    }
  </p>
  <a href={`../product/${product.id}`}>Read More</a>
</article>

<style>
  <style>
  /* Product Card */
  .product {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    background-color: rgb(26, 21, 21);
    padding: 2rem;
    border-radius: 5px;
    position: relative;
  }

  .image {
    display: block;
    max-width: 100%;
    height: auto;
    transition: transform 0.3s ease;
    border-radius: 5px;
  }

  .image:hover {
    transform: scale(1.05);
  }

  /* Text Styling */
  article p {
    color: white;
  }

  .old-price {
    text-decoration: line-through;
    color: red;
    margin-right: 8px;
  }

  .new-price {
    font-weight: bold;
    color: green;
  }

  /* On Sale Badge */
  .onSale .price::after {
    content: "On Sale!";
    background-color: red;
    color: white;
    position: absolute;
    top: 10px;
    left: 10px;
    padding: 5px;
    font-size: 14px;
    border-radius: 4px;
  }

  /* Sold Out Overlay */
  .product.soldOut::before {
    content: "Sold Out";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    color: black;
    padding: 1rem;
    font-size: 18px;
    font-weight: bold;
    border-radius: 5px;
    opacity: 0.9;
  }

  .product.soldOut img {
    opacity: 0.5;
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .onSale .price::after {
      left: 25%;
      font-size: 12px;
      padding: 5px;
    }
  }

  @media (max-width: 480px) {
    .onSale .price::after {
      left: 20%;
      font-size: 10px;
      padding: 4px;
    }

    article {
      padding: 1rem;
    }
  }
</style>
