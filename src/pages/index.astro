---
import Category from "../components/Category.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Category />
</Layout>

<style>
  h1,
  p {
    color: white;
  }

  /* CATEGORIES */

  .categories-container {
    gap: 16px;
    padding: 2rem;
  }

  .categories-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1em;
    padding: 1rem;
  }

  .list {
    background-color: gray;
    padding: 3rem;
    margin: 1rem;
    border-radius: 5px;
  }

  h1 {
    padding: 2rem;
    padding-bottom: 0%;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .categories-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .categories-list {
      grid-template-columns: repeat(1, 1fr);
    }
  }

  .list {
    background-color: gray;
    padding: 3rem;
    margin: 1rem;
    border-radius: 5px;
  }

  h1 {
    padding: 2rem;
    padding-bottom: 0;
  }
</style>
